<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/topView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.85" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtChangeBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:fontFamily="@font/roboto_regular"
        android:text="Change Background"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/imgFromGallery"
        app:layout_constraintEnd_toEndOf="@id/topView"
        app:layout_constraintStart_toStartOf="@id/topView"
        app:layout_constraintTop_toTopOf="@id/topView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgFromGallery"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/color_theme_one"
        app:layout_constraintBottom_toTopOf="@id/imgBackground4"
        app:layout_constraintEnd_toStartOf="@id/imgBackground2"
        app:layout_constraintStart_toStartOf="@id/topView"
        app:layout_constraintTop_toBottomOf="@id/txtChangeBackground" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBackground2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/background_1"
        app:shapeAppearanceOverlay="@style/customRoundedImageView"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/imgFromGallery"
        app:layout_constraintEnd_toStartOf="@id/imgBackground3"
        app:layout_constraintStart_toEndOf="@id/imgFromGallery"
        app:layout_constraintTop_toTopOf="@id/imgFromGallery" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBackground3"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:srcCompat="@drawable/background_2"
        app:shapeAppearanceOverlay="@style/customRoundedImageView"
        app:layout_constraintBottom_toBottomOf="@id/imgFromGallery"
        app:layout_constraintEnd_toEndOf="@id/topView"
        app:layout_constraintStart_toEndOf="@id/imgBackground2"
        app:layout_constraintTop_toTopOf="@id/imgFromGallery" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBackground4"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:srcCompat="@drawable/background_3"
        app:shapeAppearanceOverlay="@style/customRoundedImageView"
        app:layout_constraintBottom_toBottomOf="@id/topView"
        app:layout_constraintEnd_toStartOf="@id/imgBackground5"
        app:layout_constraintStart_toStartOf="@id/topView"
        app:layout_constraintTop_toBottomOf="@id/imgFromGallery" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBackground5"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:srcCompat="@drawable/background_4"
        app:shapeAppearanceOverlay="@style/customRoundedImageView"
        app:layout_constraintBottom_toBottomOf="@id/imgBackground4"
        app:layout_constraintEnd_toStartOf="@id/imgBackground6"
        app:layout_constraintStart_toEndOf="@id/imgBackground4"
        app:layout_constraintTop_toTopOf="@id/imgBackground4" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBackground6"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:srcCompat="@drawable/background_5"
        app:shapeAppearanceOverlay="@style/customRoundedImageView"
        app:layout_constraintBottom_toBottomOf="@id/imgBackground4"
        app:layout_constraintEnd_toEndOf="@id/topView"
        app:layout_constraintStart_toEndOf="@id/imgBackground5"
        app:layout_constraintTop_toTopOf="@id/imgBackground4" />

</androidx.constraintlayout.widget.ConstraintLayout>