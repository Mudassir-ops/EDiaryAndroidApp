<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topTagView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_2sdp"
        android:layout_gravity="start"
        android:background="@drawable/bg_note_bottom_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgHashTag"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_2sdp"
            app:layout_constraintEnd_toStartOf="@id/txtTagListText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_hash"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTagListText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="ddldldldldldlddldldldlddldld"
            app:layout_constraintEnd_toStartOf="@id/imgClose"
            app:layout_constraintTop_toTopOf="@id/imgHashTag"
            app:layout_constraintBottom_toBottomOf="@id/imgHashTag"
            app:layout_constraintStart_toEndOf="@id/imgHashTag"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            app:layout_constraintStart_toEndOf="@id/txtTagListText"
            app:layout_constraintTop_toTopOf="@id/imgHashTag"
            app:layout_constraintBottom_toBottomOf="@id/imgHashTag"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_close"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>