<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_marginVertical="@dimen/_4sdp">

    <View
        android:id="@+id/viewLanguage"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icCountryFlag"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="@id/viewLanguage"
        app:layout_constraintEnd_toStartOf="@id/languageName"
        app:layout_constraintStart_toStartOf="@id/viewLanguage"
        app:layout_constraintTop_toTopOf="@id/viewLanguage"
        app:srcCompat="@drawable/china_flag" />

    <TextView
        android:id="@+id/languageName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:text="English (US)"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="@id/viewLanguage"
        app:layout_constraintEnd_toEndOf="@id/viewLanguage"
        app:layout_constraintStart_toEndOf="@id/icCountryFlag"
        app:layout_constraintTop_toTopOf="@id/viewLanguage" />


</androidx.constraintlayout.widget.ConstraintLayout>