<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/app_screen"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.neweasydairy.fragments.introFragment.introFragmentOne.IntroFragmentOne">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtSkipOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        app:layout_constraintBottom_toTopOf="@id/imgIntroOne"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgIntroOne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/viewBottom"
        app:layout_constraintTop_toBottomOf="@id/txtSkipOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:srcCompat="@drawable/intro_screen_one"/>


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        android:background="@drawable/bottom_intro"
        android:id="@+id/viewBottom"/>



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTitleOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Diary Journal"
        android:fontFamily="@font/roboto_semibold"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="@id/viewBottom"
        app:layout_constraintBottom_toTopOf="@id/txtDescriptionOne"
        app:layout_constraintStart_toStartOf="@id/viewBottom"
        app:layout_constraintEnd_toEndOf="@id/viewBottom"
        android:textSize="@dimen/_20sdp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtDescriptionOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Log your thoughts and plan goals."
        android:textColor="@color/text_gray_color"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintBottom_toTopOf="@id/btnNextIntroOne"
        app:layout_constraintTop_toBottomOf="@id/txtTitleOne"
        app:layout_constraintStart_toStartOf="@id/txtTitleOne"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNextIntroOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtDescriptionOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintWidth_percent="0.8"
        android:background="@drawable/bg_done_btn"
        android:text="Next"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textAllCaps="false"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>